{
  "manifest_version": 3,
  "name": "DigiPrime Shopee Sync",
  "version": "1.0",
  "description": "Automatically sync Shopee orders to DigiPrime Dashboard",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://seller.shopee.co.id/*",
    "https://digiprime-dashboard.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://seller.shopee.co.id/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
